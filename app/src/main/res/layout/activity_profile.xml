<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical"
    android:background="@drawable/profile"
    >
    <Button
        android:id="@+id/profileBack"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/back_button"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="-45dp"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/profile_blank3"
            />


    </LinearLayout>

    <TextView
        android:gravity="center"
        android:id="@+id/profileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30dp"
        />
    <TextView
        android:id="@+id/profileRole"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/profileRFID"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileDept"
        android:text="DEPARTMENT: CSE"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileBatch"
        android:text="BATCH: 163"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_button"

        android:layout_gravity="center"

        />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileRunning"
        android:text="RUNNING TRIMESTER: 11th"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_button"

        android:layout_gravity="center"

        />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileID"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_button"

        android:layout_gravity="center"

        />

    <Button
        android:id="@+id/profileLogout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:textColor="#FF0000"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:text="LOGOUT"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:backgroundTint="#11000000"
        />





</LinearLayout>