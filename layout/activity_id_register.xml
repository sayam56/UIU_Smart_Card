<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IdRegister"
    android:background="@drawable/background"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/withSIDtvID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:foregroundGravity="center"
            android:gravity="center_horizontal" />


    </LinearLayout>
    <TextView
        android:id="@+id/withSIDtvRole"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:foregroundGravity="center"
        android:textSize="25dp"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/withSIDetName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:foregroundGravity="center"
        android:textAlignment="center"
        android:hint="Name"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:enabled="false"

        />

    <EditText
        android:id="@+id/withSIDetID"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:foregroundGravity="center"
        android:textAlignment="center"
        android:hint="Student ID"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:enabled="false"
        />


    <EditText
        android:id="@+id/withSIDetEmail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Email"
        android:textColor="#FFFFFF"
        android:foregroundGravity="center"
        android:textAlignment="center"
        android:width="200dp"
        android:gravity="center"
        android:textSize="15dp"
        android:enabled="false"
        />
    <EditText
        android:id="@+id/withSIDetPass"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Password"
        android:textColor="#FFFFFF"
        android:foregroundGravity="center"
        android:textAlignment="center"
        android:width="200dp"
        android:gravity="center"
        android:textSize="15dp"
        android:inputType="textVisiblePassword"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50dp"
        >

        <Button
            android:id="@+id/withSIDsubmitBtn"
            android:layout_width="195dp"
            android:layout_height="50dp"
            android:text="SUBMIT"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"


            />
    </LinearLayout>


</LinearLayout>